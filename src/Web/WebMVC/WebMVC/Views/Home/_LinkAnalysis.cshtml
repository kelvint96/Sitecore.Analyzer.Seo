@{
}

@model WebMVC.Application.Services.Scraper.Models.Dto.LinkDto

<div class="container">
    <h6>
        Raw Data:
    </h6>
    <textarea readonly class="form-control">@Json.Serialize(Model.Links)</textarea>


    <br />
    <h6>Occurences</h6>
    <table id="linkTable"
           data-pagination="true"
           data-search="true">
        <thead>
            <tr>
                <th data-field="no" data-sortable="true">#</th>
                <th data-field="word" data-sortable="true">Link</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    $('#linkTable').bootstrapTable({data: @Json.Serialize(Model.OccurenceList)})
</script>